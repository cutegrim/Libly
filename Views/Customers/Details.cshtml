@model Libly.Models.Customer

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Membership Type: @Model.Membership.Name</li>
    @if (Model.Birthday.HasValue)
    {
        <li>Birthdate: @Model.Birthday.Value.ToShortDateString()</li>
    }
    @if (Model.IsSubscribed == true)
    {
        <li>Subscriber</li>
    }

</ul>